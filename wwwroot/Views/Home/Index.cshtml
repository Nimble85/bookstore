@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <h3>BOOKS STORE</h3>
    <table>
        <tr class="header">
            <td><p>Name of Books</p></td>
            <td><p>Author</p></td>
            <td><p>Price</p></td>
            <td></td>
        </tr>
        @foreach (var b in ViewBag.Books)
        {
            <tr>
                <td><p>@b.Name</p></td>
                <td><p>@b.Author</p></td>
                <td><p>@b.Price</p></td>
                <td><p><a href="/Home/Buy/@b.Id">Buy</a></p></td>
            </tr>
        }
    </table>
</div>